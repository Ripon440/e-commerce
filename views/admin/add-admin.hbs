
<div class="row p-0">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-2">
        {{> dashboard_list }}
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
      <div class="">
        <div class="mt-2 text-center white">
            <h1 class="red-candy-color text-capitalize p-2">Add Admin</h1>
        </div>

        {{# if messages}}
            <div class="alert alert-danger">
                <p class="mb-0">{{messages}}</p>
            </div>
        {{/if}}

        <div class="white">
          <form action="/admin/add-admin" method="post" class="p-3">
            <div class="form-group row">
              <label for="email" class="col-sm-2 col-md-2 col-form-label">Email :</label>
              <div class="col-sm-10 col-md-10">
                <input type="text/number" name="email" class="form-control" id="email" placeholder="enter email"  required>
              </div> 
            </div>

            <div class="form-group row">
              <label for="password" class="col-sm-2 col-md-2 col-form-label">Password :</label>
              <div class="col-sm-10 col-md-10">
                <input type="password" name="password" class="form-control" id="password" placeholder="enter password" required>
              </div> 
            </div>

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            <button class="btn btn-red-candy form-control" type="submit">Add</button>
          </form>
        </div>
      </div>
    </div>
</div>
