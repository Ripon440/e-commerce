<div class="row mt-2">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 white">
        <div class="text-center red-candy-color">
            <h1>Chekout</h1>
            <h4>Your Total: {{ total }}.Tk</h4>
        </div>
        <div class="alert alert-danger" {{#if noErrors }} hidden {{/if}}>
            {{errMsg}}
        </div>
        <form action="/orders/checkout" method="post">
            <div class="form-group">
                <label for="name">Name: </label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name.." required>
            </div>
            <div class="form-group">
                <label for="contact">Contact Number:</label>
                <input type="text/number" class="form-control" name="contact_number" id="contact" placeholder="Contact Number" required>
                <small id="contact" class="form-text" style="color:red;">We'll call you to ensure your contact number.</small>
            </div>
            <div class="form-group">
                <label for="pickup_point">Pickup point:</label>
                <input type="text/number" class="form-control" name="pickup_point" id="pickup_point" placeholder="pick up point" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <textarea class="form-control" name="address" id="address" rows="2"></textarea>
            </div>
            <div class="text-center">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-red-candy form-control">Order Now</button>
            </div>
         </form>
    </div>
</div>