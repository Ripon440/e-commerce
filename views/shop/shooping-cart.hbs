
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 offset-md-3 offset-lg-3">
        {{# if products }}
        
        <div class="mt-2">
            <ul class="list-group">
                {{# each products }}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>{{ this.item.title }}</strong>
                    <span class="badge badge-primary badge-pill">{{ this.price }} Tk.</span>
                    <div class="btn-group" aria-label="dropdown">
                        <button id="action" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true">
                        Action
                        </button>
                        <div class="dropdown-menu" aria-labelledby="action">
                            <a class="dropdown-item" href="/orders/reduce/{{ this.item.id }}">Reduce By 1</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/orders/remove/{{ this.item.id }}">Remove All</a>
                        </div>
                    </div>
                    <span class="badge badge-primary badge-pill">{{ this.qty }}</span>
                </li>
                {{/each}}
            </ul>
        </div>
        
        <div class="mt-2">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Total: {{ totalPrice }} Tk.</strong>
                </li>
            </ul>
        </div>
        <div class="mt-2 white">
            <div class="text-center">
                <h3 class="red-candy-color">Checkout As</h3>
            </div>
            <hr style="border-color: #292929;">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mb-2">
                    <a class="btn btn-red-candy form-control" href="/orders/checkoutAs">Guest</a>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mb-2">
                    <a class="btn btn-red-candy form-control" href="/orders/checkout">User</a>
                </div>
            </div>
        </div>
        {{ else }}
        <div class="mt-2">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>No Item Exist in Cart</strong>
                </li>
            </ul>
        </div>
        {{/if}}
    </div>
</div>
