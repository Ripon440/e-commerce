<div class="">
    <div class="row display-by-category">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-2">
            <div class="p-3 white">
                <div class="mt-2 text-center">
                    {{# if gender}}
                    <h4 style="text-transform:capitalize">{{ gender }}</h4>
                    {{ else }}
                    <h4 style="text-transform:capitalize">{{ products.[0].[0].gender }}'s {{ products.[0].[0].category }}</h4>
                    {{/if}}
                    <h5 style="display: inline-block;" >Categories</h5>
                </div>
                <ul class="list-group list-group-flush text-uppercase" style="font-size:12px;">
                    {{# if gender }}
                        <a href="/products/display-by-gender/{{ gender }}" class="list-group-item list-group-item-action">All</a>
                        {{#each categoryList}}
                        <a href="/products/display-by-category/{{ ../gender }}/{{ this }}" class="list-group-item list-group-item-action">{{this}}</a>
                        {{/each}}
                    {{ else if genderTypes }}
                    <!--{{ products.[0].[0].category }}-->
                        <a href="/products/display-by-gender/{{ products.[0].[0].category }}" class="list-group-item list-group-item-action">All</a>
                        {{#each genderTypes}}
                        <a href="/products/display-by-category/{{this}}/{{ ../products.[0].[0].category }}" class="list-group-item list-group-item-action">{{this}}'s {{ ../products.[0].[0].category }}</a>
                        {{/each}}
                    {{/if}}
                </ul>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
            {{# each products}}
            <div class="row m-0">
                {{# each this}}
                <div class="mt-2 mb-1 pl-0 pr-1 col-6 col-xs-6 col-sm-3 col-md-3 col-lg-3">
                    <div class="product">
                        <div>
                            <a href="/products/users/single-product/{{ this._id }}"><img class="img-h200" src="{{ this.images.[0].img_path }}" alt="product image"></a>
                        </div>
                        <div class="product-bottom text-center">
                            <p class="mb-0 text-capitalize">{{ this.title }}</p>
                            <p class="mb-0">{{ this.price }} Tk.</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div> 
</div>
