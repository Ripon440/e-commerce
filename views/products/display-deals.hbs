<div class="">
    <div class="row display-by-category ml-0 mr-0">
        <div class="col-12 col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-2 pl-0 pr-1">
            <div class="p-3 white">
                <div class="mt-3 mb-2 text-center">
                    <h4 style="display: inline-block;" class="text-uppercase" >deals type</h4>
                    <h5 class="text-capitalize red-candy-color">{{ collection_type }}</h5>
                </div>
                <ul class="list-group list-group-flush text-capitalize res-text-center">
                    <a href="/products/display-collection/{{ collection_type }}/null" class="list-group-item list-group-item-action">All</a>
                    {{#each categoryList}}
                    <a href="/products/display-collection/{{ ../collection_type }}/{{this}}" class="list-group-item list-group-item-action">{{this}}</a>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-12 col-xs-12 col-sm-12 col-md-9 col-lg-9 pl-1 pr-0">
            {{# each products}}
            <div class="row m-0">
                {{# each this}}
                <div class="mt-2 mb-1 pl-0 pr-1 col-xs-12 col-sm-4 col-md-3 col-lg-3 text-center">
                    <div class="card product">
                        <div class="product-image">
                            <a href="/products/users/single-product/{{ this._id }}"><img class="card-img-top img-h200" src="{{ this.images.[0].img_path }}" alt="product image"></a>
                        </div>
                        <div class="product-bottom">
                            <h6 class="mb-1">{{ this.title }}</h6>
                            <!-- <p style="color:red; margin-bottom:2px;">Code: {{ this.code }}</p> -->
                            <p class="mb-1">{{ this.price }} Tk.</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div> 
</div>
