<div class="row mt-3 mb-3">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 offset-sm-2 offset-md-3 offset-lg-3">
        <div class="card">
            <div class="">
                <img class="card-img-top" src="{{ product_image.img_path }}" alt="product image" style="width:100%; max-height:400px;">
            </div>
            
            <h5 class="text-uppercase text-center" style="color:red;">Code: {{ product_image.color_code }}</h5>
           
        </div>

        <div class="mt-1">
        <form action="/orders/add-to-cart/" method="post">

            <input type="text/number" value="{{ product_id }}" name="product_id" hidden>
            <input type="text/number" value="{{ product_image._id }}" name="product_image_id" hidden>

            <div class="form-row align-items-center">
                <div class="col">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                    <div class="input-group-text">size</div>
                    </div>
                    <select name="size" id="" class="form-control">
                        {{#each product_image.sizes }}
                        <option>{{ this.size }}</option>
                        {{/each}}
                    </select>
                    <!--  <input type="text" class="form-control" id="inlineFormInputGroup" value="{{ product_image.color_code }}" readonly> -->
                </div>
                </div>
                <div class="col">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                        <div class="input-group-text">quantity</div>
                        </div>
                        <input type="number" class="form-control" name="quantity" value="1">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col"> <!--{{ product_id }} <br> {{ product_image._id }} -->
                        <!-- <a href="/orders/add-to-cart/{{ product_id }}/{{ product_image._id }}" class="btn btn-primary form-control">Add to cart</a>-->
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <button type="submit" class="btn btn-red-candy form-control">Add to cart</button>
                    </div>
                </div>
            </div>
        </form>
        </div>
    </div>
</div>

