<div class="container">
<h1 style='text-align:center;'>Update Product</h1>
<hr>
<form action="/products/update-products/{{product._id}}" method="post">
  <div class="form-group row">
    <label for="product_code" class="col-sm-2 col-md-2 col-form-label">Product code:</label>
    <div class="col-sm-10 col-md-10">
      <input type="text/number" value="{{ product.code }}" name="product_code" class="form-control" id="product_code" placeholder="Product code">
      <div id="codeSearchResult"></div>
    </div> 
  </div>

  <div class="form-group row">
    <label for="product_category" class="col-sm-2 col-md-2 col-form-label">Product Category:</label>
    <div class="col-sm-10 col-md-10">
      <select class="form-control" name="product_category" id="product_category" required>
        <option>{{ product.category }}</option>
        {{#each category}}
          <option>{{ this }}</option>
        {{/each}}
      </select>
    </div> 
  </div>

  <div class="form-group row">
    <label for="collection_type" class="col-sm-2 col-md-2 col-form-label">Collection Type:</label>
    <div class="col-sm-10 col-md-10">
      <select class="form-control" name="collection_type" id="collection_type" required>
        <option>{{ product.collection_type }}</option>
        <option>flash</option>
        <option>upcoming</option>
        <option>collections</option>
      </select>
    </div> 
  </div>

  <div class="form-group row">
    <label for="gender_type" class="col-sm-2 col-md-2 col-form-label">Gender Category:</label>
    <div class="col-sm-10 col-md-10">
      <select class="form-control" name="gender_type" id="gender_type" required>
        <option>{{ product.gender }}</option>
        <option>women</option>
        <option>men</option>
        <option>baby</option>
        <option>cellphones-accessories</option>
        <option>computer</option>
        <option>consumer-electronics</option>
        <option>sports-outdoors</option>
        <option>others</option>
      </select>
    </div> 
  </div>

  <div class="form-group row">
    <label for="product_title" class="col-sm-2 col-md-2 col-form-label">Product title:</label>
    <div class="col-sm-10 col-md-10">
      <input type="text" value="{{ product.title }}" name="product_title" class="form-control" id="product_title" placeholder="Product title"  required>
    </div> 
  </div>

  <div class="form-group row">
    <label for="product_price" class="col-sm-2 col-md-2 col-form-label">Product Price:</label>
    <div class="col-sm-8 col-md-8">
      <input type="text/number" value="{{ product.price }}" name="product_price" class="form-control" id="product_price" placeholder="Product price"  required>
    </div>
  </div>
  
  <button class="btn btn-primary form-control" type="submit">Update Product</button>
</form>
</div>


<script type="text/javascript" src="/javascripts/product-code-search.js"></script>