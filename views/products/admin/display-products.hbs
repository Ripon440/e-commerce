<div class="row p-0">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-2">
        {{> dashboard_list }}
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
        <div class="text-center white p-1 mt-2">
            <h1 class="red-candy-color text-capitalize">all products</h1>
        </div>
        {{# each products }}
        <div class="row m-0">
            {{# each this }}
            <div class=" col col-xm-12 col-sm-4 col-md-3 col-lg-3 pl-0 mt-2">
                <div class="product">
                    <div>
                        <a href="/products/admin/single-product/{{ this._id }}"><img class="img-h200" src="{{ this.images.[0].img_path }}" alt="product image"></a>
                    </div>
                    <a href="/products/admin/single-product/{{ this._id }}">
                        <div class="card-img-overlay">
                            <h5 class="card-title">{{ this.code }}</h5>
                        </div>
                    </a>
                    <div class="product-bottom text-center">
                        <p class="mb-0">{{this.code}}</p>
                        <p class="mb-0 text-capitalize">{{ this.title }}</p>
                        <p class="mb-0">{{ this.price }} Tk.</p>
                    </div>
                    <div class="bg-transparent border-default p-0">
                        <div class="row m-0">
                            <div class="col-12 mt-1 pl-0 pr-0">
                                <a href="/products/update-products/{{ this._id }}" class="btn btn-primary form-control">Update</a>
                            </div>
                            <div class="col-12 mt-1 pl-0 pr-0">
                                <a href="/products/add-product-images/{{ this._id }}" class="btn btn-primary form-control">Add Images</a>
                            </div>
                            <div class="col-12 mt-1 pl-0 pr-0">
                                <a href="/products/delete-products/{{ this._id }}" class="btn btn-danger form-control">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>



    
