<div class="row p-0">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-2">
        {{> dashboard_list }}
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
        <div class="">
            <div class="p-2 text-center white mb-2">
                <h1 class="red-candy-color">Add Category</h1>
            </div>
            <div>
                <form action="/products/add-category" method="post">
                    <div class="form-group row">
                        <label for="category_name" class="col-sm-2 col-md-2 col-form-label">Category Name:</label>
                        <div class="col-sm-10 col-md-10">
                        <input type="text/number" name="category_name" class="form-control" id="category_name" placeholder="Enter category name"  required>
                        </div> 
                    </div>
                    <button class="btn btn-red-candy form-control" type="submit">Add Category</button>
                </form>
            </div>
            
        </div>
    </div>
</div>



