<div class=" mb-2"><!-- Left Start -->
    <div class="row m-0">
        {{!-- <div class="col-md-2 col-lg-2">
            left text area
        </div> --}}
        <div class="col-sm-12 col-md-12 col-lg-12 p-0 mt-2">
            <div class="row m-0">
                {{# each product.images }}
                <div class="col-sm-12 col-md-6 col-lg-6 pl-0 mt-2">
                    <div class="row m-lr-0">
                        <div class="col-sm-4 col-md-4 col-lg-4 p-lr-0">
                            <img src="{{ this.img_path }}" alt="image" style="width:100%;height:100%;">
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-8" style="background-color:#fff">
                            <form action="" method="post" style="padding:10px 0;">
                                <div class="form-group row m-0">
                                    <label for="product_code" class="p-lr-0 col-sm-4 col-md-4 col-form-label">Color code:</label>
                                    <div class="col-sm-8 col-md-8 p-r-0">
                                        <input type="text/number" value="{{ this.color_code }}"  class="form-control-plaintext" id="product_code" readonly>
                                    </div>
                                </div>

                                {{#if this.sizes}}

                                <div class="form-group  m-0">
                                    <label for="sizes" class="col-form-label">Sizes:</label>
                                    <div class="">
                                        <table class="table table-bordered table-sm text-center">
                                            <tbody>
                                                <tr>
                                                    <td>Size:</td>
                                                    {{# each this.sizes}}
                                                    <td>{{ this.size }}</td>
                                                    {{/each}}
                                                </tr>
                                                <tr>
                                                    <td>Quantity:</td>
                                                    {{# each this.sizes}}
                                                    <td>{{ this.size_qty }}</td>
                                                    {{/each}}
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                {{/if}}

                                <div class="form-group row m-0" style="position: absolute;bottom: 0;width: 100%;">
                                    <div class="col">
                                        <a href="/products/add-size-quantity/{{ this._id }}" class="btn btn-primary form-control">Add sizes & quantity</a>
                                    </div>
                                    <div class="col">
                                        <a href="/products/delete-product-color/{{ this._id }}" class="btn btn-danger form-control">Delete</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="row" style="margin: 20px 0 0 0;">
                <div class="col-sm-12 col-md-8 col-lg-8 offset-md-2 offset-lg-2">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-product-details-tab" data-toggle="tab" href="#nav-product-details" role="tab" aria-controls="nav-product-details" aria-selected="true">Product details</a>
                            <a class="nav-item nav-link" id="nav-shipping-tab" data-toggle="tab" href="#nav-shipping" role="tab" aria-controls="nav-shipping" aria-selected="false">Shipping</a>
                            <a class="nav-item nav-link" id="nav-garenty-tab" data-toggle="tab" href="#nav-garenty" role="tab" aria-controls="nav-garenty" aria-selected="false">Seller Garenty</a>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-product-details" role="tabpanel" aria-labelledby="nav-product-details-tab">
                            <div class="" style="background-color:#e9e9e9;">
                                <h3>Items specifications</h3>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-6 col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Product code: {{ product.code }}</li>
                                        <li class="list-group-item">Brand name:{{ product.title }}</li>
                                        <li class="list-group-item">Price: {{ product.price }}</li>
                                        <li class="list-group-item">Model number:</li>
                                        <li class="list-group-item">Season:</li>
                                    </ul>
                                </div>

                                <div class="col-sm-12 col-md-6 col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Gender:</li>
                                        <li class="list-group-item">Colors available:</li>
                                        <li class="list-group-item">Size available:</li>
                                        <li class="list-group-item">Insole Material</li>
                                        <li class="list-group-item">New arrival:</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="nav-shipping" role="tabpanel" aria-labelledby="nav-shipping-tab">
                            <div class="" style="background-color:#e9e9e9;">
                                <h3>Shipping Details:</h3>
                            </div>
                            <div>
                                <table class="table table-bordered">
                                    <caption>Details about shipping system.</caption>
                                    <thead>
                                        <tr>
                                            <th scope="col">Shipping Company</th>
                                            <th scope="col">Shipping Cost</th>
                                            <th scope="col">Estimated Delivery Time</th>
                                            <th scope="col">Tracking information</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td scope="row">1</td>
                                            <td>Mark</td>
                                            <td>Otto</td>
                                            <td>@mdo</td>
                                        </tr>
                                        <tr>
                                            <td scope="row">2</td>
                                            <td>Jacob</td>
                                            <td>Thornton</td>
                                            <td>@fat</td>
                                        </tr>
                                        <tr>
                                            <td scope="row">3</td>
                                            <td>Larry the Bird</td>
                                            <td>Larry the Bird</td>
                                            <td>@twitter</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="nav-garenty" role="tabpanel" aria-labelledby="nav-garenty-tab">
                            <div class="" style="background-color:#e9e9e9;">
                                <h3>Seller Guarenty:</h3>
                            </div>
                            <div>
                                <table class="table table-bordered">
                                    <caption>Details about seller guarenty.</caption>
                                    <tbody>
                                        <tr class="row" style="margin-left:0;margin-right:0;">
                                            <th class="col-md-4">Return Policy</th>
                                            <td class="col-md-8">
