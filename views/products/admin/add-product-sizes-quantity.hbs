<div class="row" style="margin: 30px 0;">
  <div class="col">
    <img src="{{ product.images.[0].img_path }}" alt="product image" style="width:100%;height:100%;">
  </div>

  <div class="col-8">
    <div>
      <h1 style='text-align:center;'>Add sizes and quantity</h1>
    </div>
    <div>
      <form action="/products/add-size-quantity/{{ product._id }}/{{ product.images.[0]._id }}" method="post">
        <div class="form-group row">
          <label for="product_code" class="col-sm-2 col-md-2 col-form-label">Product code:</label>
          <div class="col-sm-10 col-md-10">
            <input type="text/number" class="form-control" id="product_code" value="{{ product.code }}" readonly>
          </div> 
        </div>

        <div class="form-group row">
          <label for="color_code" class="col-sm-2 col-md-2 col-form-label">Color Code:</label>
          <div class="col-sm-10 col-md-10">
            <input type="text/number"  class="form-control" id="color_code" value="{{ product.images.[0].color_code }}" readonly> 
          </div> 
        </div>

        <div class="form-group row">
          <label for="size" class="col-sm-2 col-md-2 col-form-label">size:</label>
          <div class="col-sm-10 col-md-10">
            <input type="text/number" name="size" class="form-control" id="size" placeholder="Enter size">
          </div> 
        </div>

        <div class="form-group row">
          <label for="size_quantity" class="col-sm-2 col-md-2 col-form-label">size quantity:</label>
          <div class="col-sm-10 col-md-10">
            <input type="number" name="size_quantity" class="form-control" id="size_quantity" placeholder="color quantity">
          </div> 
        </div>

        <button class="btn btn-primary form-control" type="submit">Add</button>
      </form>
    </div>
  </div>

  
</div>


