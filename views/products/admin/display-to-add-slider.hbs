<div style="margin:30px 0;">
    <div class="text-center">
        <h1 class="text-capitalize">{{ title }}</h1>
        <hr class="mt-2 mb-2" style="border-color:red;">
    </div>
    <div class="row m-0 p-0">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-3">
            <div class="p-3 white">
                <div class="mt-3 mb-2 text-center">
                    <h4 style="display: inline-block;" class="text-uppercase red-candy-color" >category</h4>
                </div>
                <ul class="list-group list-group-flush text-capitalize res-text-center">
                    <a href="/products/display-to-add-slider/" class="list-group-item list-group-item-action">All</a>
                    <a href="/products/display-to-add-slider/shoes" class="list-group-item list-group-item-action">Shoes</a>
                    <a href="/products/display-to-add-slider/cloth" class="list-group-item list-group-item-action">Cloth</a>
                    <a href="/products/display-to-add-slider/watch" class="list-group-item list-group-item-action">watch</a>
                    <a href="/products/display-to-add-slider/pant" class="list-group-item list-group-item-action">pant</a>
                    <a href="/products/display-to-add-slider/shirt" class="list-group-item list-group-item-action">Shirt</a>
                </ul>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
            <div class="row m-0">
                {{# each sliderProducts }}
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 mt-2 pl-0 last-child">
                    <div class="card">
                        <div class="product-image">
                            <img class="card-img-top img-h200" src="{{ this.img_path }}" alt="product image">
                        </div>
                        
                        <div class="card-footer bg-transparent border-default">
                            <div class="row">
                                <div class="col">
                                    {{!-- <p>{{ this }}</p> <p>{{this.category}}</p> <p>{{this.img_path}}</p> --}}
                                    <form action="/products/add-to-slider" method="post">
                                        <input type="text" value="{{ this.category }}" name="category" hidden>
                                        <input type="text" value="{{ this.img_path }}" name="img_path" hidden>
                                        <button type="submit" class="btn btn-red-candy form-control">Add to slider</button>
                                    </form>
                                    {{!-- <a href="/products/add-to-slider/{{this}}" class="btn btn-red-candy form-control">Add to slider</a> --}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>




