<div class="row">
  <div class="col col-xs-12 col-sm-12 col-md-3 col-lg-3 mt-2">
        {{> dashboard_list }}
  </div>
  <div class="col col-xs-12 col-sm-12 col-md-9 col-lg-9 white mt-2">
    <div>
      <h1 style='text-align:center;'>Add Products Images</h1>
    </div>
    <div>
      <form action="/products/add-product-images/{{ product._id }}" method="post" enctype="multipart/form-data">
        <div class="form-group row">
          <label for="product_code" class="col-sm-2 col-md-2 col-form-label">Product code:</label>
          <div class="col-sm-10 col-md-10">
            <input type="text/number" class="form-control" id="product_code" value="{{ product.code }}" disabled>
          </div> 
        </div>

        <div class="form-group row">
          <label for="color_code" class="col-sm-2 col-md-2 col-form-label">Color Code:</label>
          <div class="col-sm-10 col-md-10">
            <input type="text/number" name="color_code" class="form-control" id="color_code" placeholder="color code">
          </div> 
        </div>

        <div class="form-group row">
          <label for="color_quantity" class="col-sm-2 col-md-2 col-form-label">Color quantity:</label>
          <div class="col-sm-10 col-md-10">
            <input type="number" name="color_quantity" class="form-control" id="color_quantity" placeholder="color quantity">
          </div> 
        </div>
        
          <div class="form-group row">
              <label for="color_image" class="col-sm-4 col-md-4 col-form-label">Color Image:</label>
              <div class="col-sm-8 col-md-8">
              <input type="file" name="color_image" class="form-control" id="color_image"  required>
              </div> 
          </div>
        
        <button class="btn btn-primary form-control" type="submit">Add Image</button>
      </form>
    </div>
  </div>
</div>


